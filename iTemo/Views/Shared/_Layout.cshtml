<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/style/css")
    @Styles.Render("~/style/bootstrap")
    @Styles.Render("~/style/fontawesome")
    @Styles.Render("~/style/jsgrid")
    @Styles.Render("~/style/nprogress")

    @Scripts.Render("~/script/jquery")
    @Scripts.Render("~/script/jsgrid")
    @Scripts.Render("~/script/js")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/script/bootstrap")
    @Scripts.Render("~/script/helper")
    @Scripts.Render("~/script/nprogress")
    @RenderSection("scripts", required: false)
</body>
</html>
